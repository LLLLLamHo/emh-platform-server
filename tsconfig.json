{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "jsx": "react-jsx",
    "lib": [
      "ES2015",
      "DOM"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./built",
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules"
  ]
}